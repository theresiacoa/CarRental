<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include('./partials/styles.ejs') %>
    <meta charset="utf-8">
    <title>Edit Car</title>
  </head>
  <body>
    <center>
      <h1>Add New Description</h1>
      
      <form method="POST" action="/cars/admin/edit/<%=data.id%>">
        Brand:<br>
        <input type="text" name="brand" value="<%= data.brand %>">
        <br>
        Type:<br>
        <input type="text" name="type" value="<%= data.type %>">
        <br>
        Color:<br>
        <input type="text" name="color" value="<%= data.color %>">
        <br>
        Year:<br>
        <input type="text" name="year" value="<%= data.year %>">
        <br>
        Price:<br>
        <input type="text" name="rentalPrice" value="<%= data.rentalPrice %>">
        <br><br>
        <input type="submit" value="Submit">
      </form>
    </center>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>